  head
    title= title
    link(rel="stylesheet", href="//brick.a.ssl.fastly.net/Lato:400")
    +stylesheet_link_tag('application')
    +javascript_include_tag('vendor/all')
    +javascript_include_tag('handlebars_templates')
  body
    header
      #cart

    main
      block content

    +javascript_include_tag('application')
